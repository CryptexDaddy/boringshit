extends layout

block content
    h1= title
    p="Hours worked: " + user.total_time
    p="Active users: " + active_users.length + " (" + active_users.map(doc => doc.display_name).join(', ') + ")"
    p="Active tasks: " + active_tasks.length
    p="Time punch: "
        a(href="/lunch") Lunch 
        a(href="/in") In 
        a(href="/out") Out
    .ui.four.statistics
        .statistic
            .value
                user.total_time
            .label
                | Hours worked
        .statistic
            .text.value
                .i.user.icon
               
            .label
                | Employes in
        .statistic
            .value
                .i.plane.icon
                |  5
            .label
                | Flights


