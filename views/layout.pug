doctype html
html
  head
    title= title
    block css
      link(rel='stylesheet', href='/stylesheets/style.css')
      link(rel='stylesheet', href='/stylesheets/normform.min.css')
      link(rel='stylesheet', type='text/css', href='/semantic/semantic.min.css')
  body(onload='kek()')
    header
      nav
        include nav.pug
    .ui.two.column.relaxed.grid
      .row
        .two.wide.column
          include sidenav.pug
        .fourteen.wide.column
          main
            block content

           

      
    footer
      block footer
        .liveSupport
          .ui.card
              .content
                  h3 Live Support Chat
              .image
                  img
              .content
                  .ui.comments#somerow
                      .comment
                          a.avatar
                              img.tiny(src='https://fr.workxplore.com/images/icons/hexagon/darkblue/MI_DARK_BLUE_ICON_SUPPORT.png')
                          .content
                              a.author Support
                              .metadata
                                  span.date Today at 5:42PM
                              .text
                                  | Welcome to Live Support, How Can i help you today?
                      .comment
                        a.avatar
                          img.tiny(src='https://fr.workxplore.com/images/icons/hexagon/darkblue/MI_DARK_BLUE_ICON_SUPPORT.png')
                        .content
                          a.author Support
                          .metadata
                            span.date Today at 5:42PM
                          .text
                            | Welcome to Live Support, How Can i help you today?


              .extra.content
                .ui.action.input.transparent.fluid
                      input(type='text', placeholder='Add Reply...')
                      i.paper.plane.outline.icon.cBlue.circular
        button.circular.ui.icon.button.right.huge.liveSupportBlob(onclick='alul()')
          i.icon.comments
    

    script.
      function alul() {
        var maindiv = document.getElementById('somerow');
        maindiv.innerHTML += '<div class="comment"><a class="avatar"><img class="tiny" src="https://img.pngio.com/imagenes-random-png-5-png-image-random-png-451_326.png"></a><div class="content"><a class="author">You</a><div class="metadata"><span class="date">Now</span></div><div class="text">XD</div></div>';
      }
    block js
      script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.min.js')
      script(src='/semantic/semantic.js')
      script(src='/javascripts/main.js')
      script(src='https://kit.fontawesome.com/5bbbb0823d.js', crossorigin='anonymous')
      
