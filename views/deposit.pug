extends layout

block content
    form.normform(action='/user/deposit', method='POST')
        fieldset
            legend Deposit
            label(for='email') Amount
            input#amount(type='number' name='amount' placeholder='0.01' step='0.0000001' min='0.00001' required)
        br
        .inline-buttons
            input(type='reset' value='Reset')
            input(type='submit' value='Submit')
